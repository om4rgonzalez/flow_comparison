<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbl_live_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola Mundo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_live_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Live Data"
        app:layout_constraintTop_toBottomOf="@id/lbl_live_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/lbl_state_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola Mundo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_live_data"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_state_flow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="State Flow"
        app:layout_constraintTop_toBottomOf="@id/lbl_state_flow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/lbl_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola Mundo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_state_flow"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_flow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Flow"
        app:layout_constraintTop_toBottomOf="@id/lbl_flow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/lbl_shared_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola Mundo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_flow"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/button_shared_flow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Shared Flow"
        app:layout_constraintTop_toBottomOf="@id/lbl_shared_flow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>